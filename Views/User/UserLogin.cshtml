@model LoyaltyReward.Models.ViewModel.LoginViewModel

@{
    ViewBag.Title = "User Login";
    Layout = null;
}
<div class="form-horizontal">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

</div>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">

    <link href="https://fonts.googleapis.com/css?family=Open+Sans" rel="stylesheet">


    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/Content/style.css">
    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
</head>
<body>
    <div class="container">
        <div class="row gx-0 justify-content-center align-items-center">
            <div class="col-8 box-form">
                <div class="row gx-0">
                    <div class="col-7 left">
                        <div class="overlay h-100 p-3 d-flex align-items-center flex-column justify-content-start">
                            <h1>Loyalty Rewards 360.</h1>
                            <br />
                            <br />
                            <p>
                                "Explore our website and watch captivating content to earn exciting rewards!
                                Dive into our  diverse collection of videos, earn points effortlessly, and treat yourself to fantastic rewards. Your viewing experience just got more rewarding!"
                            </p>
                        </div>
                    </div>
                    <div class="col-5 right bg-white">
                        @using (Html.BeginForm())
                        {
                            <h5>Login</h5>
                            <p>Don't have an account? @Html.ActionLink("SignUp", "CreateUser") Create Your Accountit takes less than a minute</p>

                            <div class="form-group">
                                <label>Login Name <span class="text-danger">*</span></label>
                                <div class="col-md-12 mb-2">
                                    @Html.TextBoxFor(model => model.LoginName, new { @class = "form-control", required = "required" })
                                    @Html.ValidationMessageFor(model => model.LoginName, "", new { @class = "text-danger" })
                                    <span class="error"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label>Password <span class="text-danger">*</span></label>
                                <div class="col-md-12">
                                    @Html.PasswordFor(model => model.Password, new { @class = "form-control mb-2", required = "required" })
                                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                    <span class="text-danger">@ViewBag.Result</span>

                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Login" class="btn btn-success" />
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>


